{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Mapping Tool",
            "type": "codelldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/minimal_mapping_tool",
            "args": [],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "/opt/ros/humble/lib:${env:LD_LIBRARY_PATH}"
            },
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "desciption": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
